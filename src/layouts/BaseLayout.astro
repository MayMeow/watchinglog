---
const { title = "Watching Log", description = "Personal record of TV & movies" } = Astro.props;
import "../styles/global.scss";
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
  </head>
  <body class="bg-body text-body">
    <header class="navbar navbar-expand-lg border-bottom mb-4">
      <div class="container">
        <a class="navbar-brand fw-semibold" href="/">Watching Log</a>
      </div>
    </header>
    <main class="container pb-5">
      <slot />
    </main>
    <footer class="border-top py-4 mt-5">
      <div class="container small text-muted">
        Made with Astro, Bootstrap, and TMDB data.
      </div>
    </footer>
  </body>
</html>
