---
const { title = "Watching Log", description = "Personal record of TV & movies" } = Astro.props;
import "../styles/global.scss";
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
  </head>
  <body class="bg-body text-body">
    <header class="site-header">
      <div class="container site-header__inner">
        <a class="site-brand" href="/">Watching.0x0.sk</a>
        <nav class="site-header__meta site-nav" aria-label="Primary">
          <a href="/" class="site-nav__link">All entries</a>
          <a href="/genres/" class="site-nav__link">Genres</a>
        </nav>
      </div>
    </header>
    <main class="container pb-5">
      <slot />
    </main>
    <footer class="site-footer">
      <div class="container site-footer__inner">
        <p class="site-footer__copy">Made with ❤️, Astro, Bootstrap, and TMDB data.</p>
      </div>
    </footer>
  </body>
</html>
